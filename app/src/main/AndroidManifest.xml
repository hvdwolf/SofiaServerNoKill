<manifest xmlns:android="http://schemas.android.com/apk/res/android"

          package="org.hvdw.sofiaservernokill"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="This skips the SofiaServer function 'kill all apps' when going to sleep" />
        <meta-data
            android:name="xposedminversion"
            android:value="53" />

        <activity android:name=".activities.PrefsActivity" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

	<provider
		android:name=".MyPreferenceProvider"
		android:authorities="org.hvdw.sofiaservernokill.preferences"
		android:exported="true"/>
    </application>

</manifest>
